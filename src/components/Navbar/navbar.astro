---
import { Image } from "astro:assets";

const routes = [
  { name: "Inicio", path: "/" },
  { name: "Actuaciones Urbanísticas", path: "/interventions" },
  { name: "Acontecimientos Noticiosos", path: "/news" },
  { name: "Conflictos", path: "/conflicts" },
  { name: "El Proyecto", path: "/project" },
];
---

<header
  class="w-full lg:h-14 my-4 lg:mt-16 lg:mb-10 flex items-center justify-between px-4 lg:px-10"
>
  <a href="/">
    <figure
      class="w-4/5 md:w-[250px] lg:w-[200px] xl:w-[250px] md:mr-16 lg:mr-0 xl:mr-16"
    >
      <Image
        src="/src/assets/Images/logo-navbar.png"
        alt={"ecuot-logo"}
        width={250}
        height={250}
      />
    </figure>
  </a>

  <figure
    class="lg:hidden w-[20%] h-full justify-self-end flex justify-end cursor-pointer"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      fill="currentColor"
      class="size-12 text-white bg-primary rounded-full p-1"
    >
      <path
        fill-rule="evenodd"
        d="M3 6.75A.75.75 0 0 1 3.75 6h16.5a.75.75 0 0 1 0 1.5H3.75A.75.75 0 0 1 3 6.75ZM3 12a.75.75 0 0 1 .75-.75h16.5a.75.75 0 0 1 0 1.5H3.75A.75.75 0 0 1 3 12Zm8.25 5.25a.75.75 0 0 1 .75-.75h8.25a.75.75 0 0 1 0 1.5H12a.75.75 0 0 1-.75-.75Z"
        clip-rule="evenodd"></path>
    </svg>
  </figure>

  <nav class="hidden ml-4 lg:flex items-center justify-between lg:flex-1">
    <ul
      class="flex gap-3 xl:gap-6 [&>li]:cursor-pointer [&>li]:hover:underline [&>li]:underline-offset-4 text-septenary text-[0.9rem] xl:text-base"
    >
      {
        routes.map((route) => (
          <li>
            <a href={route.path} class="font-semibold">
              {route.name}
            </a>
          </li>
        ))
      }
    </ul>
    <ul>
      <li class="primary-button">
        <p class="font-semibold">Iniciar Sesión</p>
      </li>
    </ul>
  </nav>
</header>
